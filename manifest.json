{
  "name": "Research Utility",
  "description": "Utility for Researech",
  "version": "0.0.1",
  "manifest_version": 3,
  "license": "MIT",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/normal-16.png",
    "32": "icons/normal-32.png",
    "48": "icons/normal-48.png",
    "128": "icons/normal-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/Tiddlywiki.svg",
        "images/Orcid.svg",
        "images/Scopus.svg",
        "images/GoogleScholarSquare.svg",
        "images/LinkOut.svg",
        "images/ReadOutlined.svg",
        "images/Save.svg"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/normal-16.png",
      "32": "icons/normal-32.png",
      "48": "icons/normal-48.png",
      "128": "icons/normal-128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/context_menu.js",
        "scripts/utils.js",
        "scripts/scholar.js",
        "scripts/scopus.js",
        "scripts/bibtex.js",
        "scripts/colleague.js"
      ],
      "css": [
        "styles/bibtex.css"
      ],
      "run_at": "document_end",
      "matches": ["<all_urls>"],  
      "exclude_matches": ["http://localhost/"]
    },
    {
      "js": [
        "scripts/tiddlywiki.js"
      ],
      "run_at": "document_end",
      "matches": [
        "http://localhost/*"
      ]
    }
  ]
}