{
  "name": "PubConnector",
  "description": "Connection publications for researchers",
  "version": "0.0.2",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/normal-16.png",
    "32": "icons/normal-32.png",
    "48": "icons/normal-48.png",
    "128": "icons/normal-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/Tiddlywiki.svg",
        "images/TiddlywikiSmall.svg",
        "images/Orcid.svg",
        "images/Scopus.svg",
        "images/GoogleScholarSquare.svg",
        "images/LinkOut.svg",
        "images/ReadOutlined.svg",
        "images/Save.svg",
        "images/ZoteroSquare.svg",
        "images/FilePdfFilled.svg",
        "images/Copy.svg"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/normal-16.png",
      "32": "icons/normal-32.png",
      "48": "icons/normal-48.png",
      "128": "icons/normal-128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/context_menu.js",
        "scripts/utils.js",
        "scripts/scholar.js",
        "scripts/scopus.js",
        "scripts/content.js",
        "scripts/publisher.js",
        "scripts/banner.js",
        "scripts/colleague.js",
        "scripts/tags.js",
        "scripts/api/tiddlywiki-api.js",
        "scripts/api/zotero-api.js",
        "scripts/tiddlywiki.js"
      ],
      "css": [
        "styles/bibtex.css"
      ],
      "run_at": "document_end",
      "matches": ["<all_urls>"]
    }
  ]
}